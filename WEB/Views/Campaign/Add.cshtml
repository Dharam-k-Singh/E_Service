
@model Model.Models.Campaign.CampaignAggregateModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Survey</li>
    </ol>
</div>


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Add Campaign</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">

        @if (TempData["Success"] != null)
        {
            <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
            <script>
                var form = document.getElementById("AddCampaign");
                form.reset();
            </script>
        }

        @if (TempData["Failure"] != null)
        {
            <p class="alert alert-danger" id="failureMessage">@TempData["Failure"]</p>
        }


        @using (Html.BeginForm("Save", "Campaign", FormMethod.Post, new { enctype = "multipart/form-data", @id = "AddCampaign" }))
        {

            <div class="panel panel-default articles">



                


                <div class="panel-heading">
                    Add Campaign
                </div>
                    <div class="panel-body articles-container">

                        <form class="add-Campaign">
                            @Html.HiddenFor(m => m.CampaignModel.CampaignId)
                            <div class="form-group">
                                <label>Campaign Name</label>

                                @Html.TextBoxFor(m => m.CampaignModel.CampaignName, new { @class = "form-control", @required = "required", @maxlength = "200", @placeholder = "Alphanumeric" })
                                @Html.ValidationMessageFor(model => model.CampaignModel.CampaignName, "", new { @style = "color:red" })

                            </div>

                           


                            <div class="form-group">
                                <div class="col-md-12 widget-right">
                                    
                                        <input type="submit" class="btn  btn-primary rounded pull-right" name="button" value="Save">
                                        @*<input type="reset" class="btn  btn-primary rounded" name="button" style="margin-left:10px" value="Cancel">*@
                                    
                                </div>
                            </div>



                        </form>
                    </div>
               





            </div>





            <div class="panel panel-default articles">

                <div class="panel-heading">
                    List of Campaign
                </div>
                <div class="panel-body articles-container  table-size">
                    <div class="">

                        <table  style="width:100%" id="table_id" class="table table-bordered table-hover">

                            <thead>
                                <tr>
                                    @*<th>Campaign ID</th>*@
                                    <th>Campaign Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var lstCampaign in Model.lstCampaignModel)
                    {

                        <tr>
                            @*<td>@lstCampaign.CampaignId</td>*@
                            <td>@lstCampaign.CampaignName </td>
                            <td> @Html.ActionLink("Edit", "Edit", new { id = lstCampaign.CampaignId }) |  @Html.ActionLink("Delete", "Delete", new { id = lstCampaign.CampaignId }, new { onclick = "return confirm('Are you sure you want to delete this record?');" }) </td>
                        </tr>
        }
                            </tbody>
                        </table>





                    </div>
                </div>

            </div>

        }
    </div>

    <!-- content ene -->
    </div>
    <script src="~/Scripts/customScripts.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#table_id').DataTable({
                responsive: true,
                ordering: true
            });
        });
    </script>


