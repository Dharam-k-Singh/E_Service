
@model IEnumerable<Model.Models.Department.DepartmentModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .table > thead > tr > th {
        white-space: nowrap;
    }
</style>
<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">List</li>
    </ol>
</div>
@*<div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Manage Department</h1>
        </div>
    </div>*@

@*<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Survey</h1>
    </div>
</div>*@

<div class="row">
    <div class="col-md-12">

        @if (TempData["Success"] != null)
        {
            <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
            <script>
                var form = document.getElementById("AddDepartment");
                form.reset();
            </script>
        }

        @if (TempData["Failure"] != null)
        {
            <p class="alert alert-danger" id="failureMessage">@TempData["Failure"]</p>
        }

        <div class="panel panel-default articles">
            <div class="panel-body articles-container table-size">
                <div class="table-size-a rakeshcc" id="style-3">
                    <!--<h2 class="section-heading"></h2>-->
                    @*@Html.ActionLink("Add Department", "Add", "Department")*@

                    <table width="100%" id="table_id" class="table table-bordered table-hover">

                        <thead>
                            <tr>
                                @*<th>Department ID</th>*@
                                <th>Department Name</th>
                                <th>EmailId</th>
                                <th>Escalation Email Level1</th>
                                <th>No Of Days For Escalation</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var lstDepartment in Model)
                {

                    <tr>
                        <td hidden>@lstDepartment.DepartmentId</td>
                        <td>@lstDepartment.DepartmentName </td>
                        <td>@lstDepartment.DepartmentEmailId </td>
                        <td>@lstDepartment.EscalationEmailLevel1 </td>
                        <td>@lstDepartment.NoOfDaysForEscalation </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = lstDepartment.DepartmentId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = lstDepartment.DepartmentId }, new { onclick = "return confirm('Are you sure you want to delete this record?');" })
                        </td>


                    </tr>
    }
                        </tbody>
                    </table>



                </div>

            </div>
        </div>

    </div>

    <!-- content ene -->

</div>
@*<script src="~/Scripts/customScripts.js"></script>
<script src="~/Scripts/jquery.dataTables.min.js"></script>*@
<script type="text/javascript">
    $(document).ready(function () {
        $('#table_id').DataTable({
            responsive: true,
            ordering: true
        });
    });
</script>




