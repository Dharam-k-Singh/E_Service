@model IEnumerable<Model.Models.UserCreation.GetEPUserCreationModel>
@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">List of User</li>
    </ol>
</div>

<div class="row">
    @if (TempData["Success"] != null)
    {
        <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>

    }

    @if (TempData["Failure"] != null)
    {
        <p class="alert alert-danger" id="failureMessage">@TempData["Failure"]</p>

    }

    <div class="col-md-12 ">

        <div class="panel panel-default articles ">



            <div class="panel-heading">
                <div class="col-md-12">
                    List of  User
                    <form class="form-search-a" role="search">
                        <div class="input-group add-on">

                            <input class="form-control" placeholder="Search" id='search-box' type="text">
                            @*<div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                </div>*@
                        </div>
                    </form>
                </div>

            </div>




            <div class="panel-body articles-container table-size">
                <div class="table-size-a rakeshcc" id="style-3">
                    <table class="table table-bordered table-hover flexx_a  tableFixHead" cellspacing="0" width="100%">

                        <thead class="zzzzzzz">
                            <tr class="top-abc">
                                <th>Name</th>

                                <th>Enterprise</th>
                                <th>EmailId</th>
                                <th>MobileNo</th>
                                @*<th>Password</th>*@

                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody class="yyyyyyy">

                            @foreach (var GetEPUserEdit in Model)
                            {
                                <tr>
                                    @*<td>
                                            @Html.DisplayFor(m => GetEPUserEdit.OrganizationID)
                                        </td>*@
                                    <td>
                                        @Html.DisplayFor(m => GetEPUserEdit.EmployeeName)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(m => GetEPUserEdit.OrganizationName)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(m => GetEPUserEdit.EmailId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(m => GetEPUserEdit.MobileNo)
                                    </td>
                                    @*<td>
                                            @Html.DisplayFor(m => GetEPUserEdit.Password)
                                        </td>*@
                                    @*<td>
                                            @Html.DisplayFor(m => GetUserList.Role)
                                        </td>*@
                                    <td>
                                        @Html.ActionLink("Edit", "EditEPuser", new { UDID = GetEPUserEdit.UDID })|

                                        @Html.ActionLink("Delete", "Delete", new { UDID = GetEPUserEdit.UDID }, new { onclick = "return confirm('Are you sure you want to delete this record?');" })
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>


                    @*<div class="text-center"><button class="btn btn-primary" type="submit">Save</button> <button class="btn btn-primary" type="submit">Reset</button></div>*@
                </div>
            </div>
        </div>

    </div>
</div>
<script>
    (function () {
        var showResults;
        $('#search-box').keyup(function () {
            var searchText;
            searchText = $('#search-box').val();
            return showResults(searchText);
        });
        showResults = function (searchText) {
            $('tbody tr').hide();
            return $('tbody tr:Contains(' + searchText + ')').show();
        };
        jQuery.expr[':'].Contains = jQuery.expr.createPseudo(function (arg) {
            return function (elem) {
                return jQuery(elem).text().toUpperCase().indexOf(arg.toUpperCase()) >= 0;
            };
        });
    }.call(this));
</script>



@if (TempData["Success"] != null)
{
    <script type="text/javascript">

            window.onload = function () {
                @*alert("@(TempData["Success"])");*@

                                $.confirm({
                                    title: '@(TempData["Success"]) ',
                                    content: " ",
                                    type: 'dark',
                                    typeAnimated: true,
                                    buttons: {
                                        tryAgain: {
                                            text: 'OK',
                                            btnClass: 'btn-primary',
                                            action: function () {

                                                window.location.reload();
                                            }
                                        },
                                    }
                                });
            };
    </script>
}


