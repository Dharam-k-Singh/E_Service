@using Model.Models.UserDetail
@model IEnumerable<Model.Models.FacilityRTD.MeterReadingListModel>
@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_LayoutFacility.cshtml";
    // var message = TempData["Failure1"] ?? string.Empty;

    int roleid = 0;
    string userId = null;

    if (Session["UserDetails"] != null)
    {
        UserDetailModel userdetail = (UserDetailModel)Session["UserDetails"];
        roleid = userdetail.RoleId;
        userId = userdetail.EmployeeName;


    }
}

<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">List of Meter Reading</li>
    </ol>
</div>


<div class="row">
    <div class="col-md-12">

        @if (TempData["Success"] != null)
        {
            <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
            <script>
                                                       // var form = document.getElementById("AddDepartment");
                                                      //  form.reset();
            </script>
        }

        @if (TempData["Failure"] != null)
        {
            <p class="alert alert-danger" id="failureMessage">@TempData["Failure"]</p>
        }
        @if (roleid == 8)
        {
            <div class="row" style="float:right;margin-right:20px;margin-bottom:20px">

                @Html.ActionLink("Export Excel", "ExcelMeterDetails", new { ExportType = 1 }, new { @class = "btn btn-primary" })
                &nbsp; &nbsp; &nbsp;
                @*@Html.ActionLink("CSV", "ExcelUserInvoiceList", new { ExportType = 2 }, new { @class = "btn btn-primary" })
                &nbsp; &nbsp; &nbsp;
                @Html.ActionLink("PDF", "ExcelUserInvoiceList", new { ExportType = 3 }, new { @class = "btn btn-primary" })*@
            </div>
        }
            <div class="panel panel-default articles">
                <div class="panel-body articles-container table-size">
                    <div class="table-size-a rakeshcc" id="style-3">
                        <!--<h2 class="section-heading"></h2>-->
                        @*@Html.ActionLink("Add Department", "Add", "Department")*@

                        <table width="100%" id="table_id" class="table table-bordered table-hover">

                            <thead>
                                <tr>
                                    @*<th>Department ID</th>*@
                                    <th>Year</th>
                                    <th>Month</th>
                                    <th>Category</th>
                                    <th>Sub Category</th>
                                    <th>Units Consumed (KwH) </th>
                                    @if (roleid == 8 || roleid == 5 || roleid == 7)
                                    {
                                        <th>Action</th>
                                    }

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var lst in Model)
                                {



                                    <tr>


                                        <td>@lst.YearName </td>
                                        <td>@lst.MonthName </td>
                                        <td>@lst.Category</td>
                                        <td>@lst.SubCategory</td>
                                        <td>@lst.MeterReading</td>

                                        @if (roleid == 8 || roleid == 5 || roleid == 7)
                                        {
                                            <td>

                                                @Html.ActionLink("Edit", "EditMeterDetails", new { id = lst.MId })


                                            </td>
                                        }

                                    </tr>
                                }
                            </tbody>
                        </table>



                    </div>

                </div>
            </div>

        </div>

    <!-- content ene -->

</div>
