<script>

    $('#save_value').click(function () {
        var val = [];
        $(':checkbox:checked').each(function (i) {
            val[i] = $(this).val();
        });

        var strArr = val.map(function (e) { return e.toString() });
        if (strArr == "") {
            $("#lblError").show();
            $("#lblError").text("Please select warehouse.")
            return false;
        } else {
            var txtDesc = $('#ApproverDescription').val();
            if (txtDesc == "") {
                $("#lblError").show();
                $("#lblError").text("Please enter description.")
                return false;
            }
            $("#WarehouseId_").val(strArr);
        }
    });

    $('#reject_value').click(function () {
        var val = [];
        $(':checkbox:checked').each(function (i) {
            val[i] = $(this).val();
        });

        var strArr = val.map(function (e) { return e.toString() });
        if (strArr == "") {
            var txtDesc = $('#ApproverDescription').val();
            if (txtDesc == "") {
                $("#lblError").show();
                $("#lblError").text("Please enter description.")
                return false;
            }
        }
        $("#WarehouseId_").val(strArr);

    });

</script>
<input type="text" value="@Model.WarehouseId" id="warehouseData" hidden />
<script type="text/javascript">
    window.onload = function () {
        var array = $('#warehouseData').val().split(",");
        $.each(array, function (i) {
            document.getElementById(array[i]).disabled = false;
            //document.getElementById(array[i]).checked = true;
            document.getElementById(array[i] + '-' + array[i]).classList.remove('bookeswarehouse');
            document.getElementById(array[i] + '-' + array[i]).classList.add('openwarehouse');
        });
    }
</script>


