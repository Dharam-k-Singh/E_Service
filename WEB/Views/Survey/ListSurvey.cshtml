@model IEnumerable<Model.Models.Survey.GetSurveyModel>
@*@model Model.Models.Survey.SurveyModel*@

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Survey</li>
    </ol>
</div>


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">List of Survey</h1>
    </div>
</div>


<div class="row">
    <div class="col-md-12">

        @if (TempData["Success"] != null)
        {
            <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
        }
        @if (TempData["Failure"] != null)
        {
            <p class="alert alert-danger" id="failureMessage">@TempData["Failure"]</p>
        }

        <div class="panel panel-default articles">
            <div class="panel-heading">

            </div>


            <div class="panel-body articles-container  table-size">
                <div class="">


                    <table id="table_id" class="table table-bordered table-hover" style="width:100%">

                        <thead class="thead-dark">
                            <tr>
                                @*<th>Campaign Name</th>*@
                                <th>Survey Name</th>
                                <th>No Of Questions</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var lstSurvey in Model)
                            {

                                <tr>
                                    @*<td>@lstSurvey.CampaignName</td>*@
                                    <td>@lstSurvey.SurveyName</td>
                                    <td>@lstSurvey.NoOfPages</td>
                                    <td>@lstSurvey.StartDate.ToString("dd-MM-yyyy") </td>
                                    <td>@lstSurvey.EndDate.ToString("dd-MM-yyyy")</td>
                                    <td>@lstSurvey.Status </td>
                                    <td>
                                        @Html.ActionLink("Edit", "EditSurvey", new { id = lstSurvey.SurveyId }) |  @Html.ActionLink("Delete", "DeleteSurvey", new { id = lstSurvey.SurveyId }, new { onclick = "return confirm('Are you sure you want to delete this record?');" }) |
                                        @Html.ActionLink("Publish Survey", "AssignSurvey", new { id = lstSurvey.SurveyId, SurveyName = lstSurvey.SurveyName })
                                    </td>
                                    @*@Html.ActionLink("Publish Survey", "AssignSurvey", new { id = lstSurvey.SurveyId, SurveyName = lstSurvey.SurveyName })</td>*@
                                </tr>
                            }
                        <tbody>

                    </table>
                </div>
            </div>
        </div>
        <!-- list of Survey -->

    </div>
    <!-- content ene -->
</div>

<script type="text/javascript">
        $(document).ready(function () {
            $('#table_id').DataTable({
                responsive: true,
                ordering: true
            });
        });
</script>



@if (TempData["Success"] != null)
{
    <script type="text/javascript">

            window.onload = function () {
                @*alert("@(TempData["Success"])");*@

                                $.confirm({
                                    title: '@(TempData["Success"]) ',
                                    content: " ",
                                    type: 'dark',
                                    typeAnimated: true,
                                    buttons: {
                                        tryAgain: {
                                            text: 'OK',
                                            btnClass: 'btn-primary',
                                            action: function () {

                                                window.location.reload();
                                            }
                                        },
                                    }
                                });
            };
    </script>
}